{
  "name": "root",
  "scope": "@medyll",
  "private": false,
  "scripts": {
    "commit": "cz",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,svelte}\"",
    "package-all:pre": "npm run package:pre --workspaces --if-present",
    "package-all": "npm run package-all:pre && npm run package --workspaces --if-present",
    "package:verify": "node scripts/verify-packages.js"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "workspaces": [
    "packages/*",
    "packages-config/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.28.0",
    "@medyll/idae-eslint-config": "^1.0.0",
    "@medyll/idae-prettier-config": "^1.0.0",
    "@types/jest": "^29.5.14",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.20.1",
    "jest": "^29.7.0",
    "lerna": "^8.1.9",
    "node": "^23.8.0",
    "svelte": "^5.20.1",
    "ts-jest": "^29.2.5",
    "tshy": "^3.0.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "version": "0.0.2",
  "dependencies": {
    "@medyll/cssfabric": "file:../app-node/cssfabric",
    "@medyll/idae-engine": "^1.15.0",
    "@medyll/idae-socket": "^0.0.2",
    "@octokit/rest": "^21.1.1",
    "glob": "^11.0.1",
    "npm": "^11.1.0",
    "publint": "^0.3.5"
  },
  "peerDependencies": {
    "svelte": "^5.0.0-next"
  }
}
