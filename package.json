{
  "name": "root",
  "private": false,
  "scripts": {
    "commit": "cz",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,svelte}\"",
    "package-all": "npm run package --workspaces --if-present",
    "package-watch-all": "npm run package:watch  --workspaces --if-present",
    "prepare": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "workspaces": [
    "packages/*",
    "config/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/jest": "^29.5.12",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.6.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lerna": "^8.1.6",
    "node": "^18.20.4",
    "svelte": "^5.0.0-next.183",
    "ts-jest": "^29.2.2",
    "typescript": "^5.5.3"
  },
  "version": "0.0.2",
  "dependencies": {
    "@medyll/cssfabric": "file:../app-node/cssfabric",
    "@medyll/idae-engine": "^1.0.0",
    "glob": "^7.2.0",
    "ts-node": "^10.9.2"
  }
}