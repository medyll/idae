{
  "name": "root",
  "private": false,
  "scripts": {
    "commit": "cz",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,svelte}\"",
    "package-all": "npm run package --workspaces --if-present",
    "package-watch-all": "npm run package:watch  --workspaces --if-present"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "workspaces": [
    "packages/*",
    "config/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@types/jest": "^29.5.12",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.6.0",
    "jest": "^29.7.0",
    "lerna": "^8.1.6",
    "node": "^18.20.4",
    "svelte": "^5.0.0-next.183",
    "ts-jest": "^29.2.2",
    "typescript": "^5.5.3"
  },
  "version": "0.0.2",
  "dependencies": {
    "@medyll/cssfabric": "^0.4.2",
    "@medyll/idae-engine": "^1.0.0",
    "@medyll/idae-eslint-config": "^1.0.0",
    "@medyll/idae-prettier-config": "^1.0.0",
    "glob": "^7.2.0",
    "ts-node": "^10.9.2"
  }
}