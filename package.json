{
  "name": "root",
  "scope": "@medyll",
  "private": true,
  "scripts": {
    "commit": "cz",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,svelte}\"",
    "package-all:pre": "npm run package:pre --workspaces --if-present",
    "package-all": "npm run package-all:pre && npm run prepack --workspaces --if-present && npm run package --workspaces --if-present",
    "package:verify": "node scripts/verify-packages.js",
    "postinstall": "npm run package:verify",
    "verify:workspace-deps": "node scripts/verify-workspace-deps.js"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "workspaces": [
    "packages/*",
    "packages-config/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@medyll/idae-db": "*",
    "@medyll/idae-eslint-config": "^1.2.1",
    "@rushstack/eslint-patch": "^1.15.0",
    "@types/jest": "^30.0.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "lerna": "^9.0.3",
    "node": "^24.12.0",
    "ts-jest": "^29.4.6",
    "tshy": "^3.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "version": "0.0.2",
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "chalk": "^5.6.2",
    "glob": "^13.0.0",
    "mongoose-sequence": "^6.0.1",
    "npm": "^11.7.0",
    "publint": "^0.3.16"
  },
  "peerDependencies": {
    "@medyll/idae-engine": "workspace:*",
    "@medyll/idae-eslint-config": "workspace:*",
    "@sveltejs/adapter-auto": "^4.0.0",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "svelte": "^5.0.0-next",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.55.1"
  }
}
