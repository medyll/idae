{
  "name": "root",
  "scope": "@medyll",
  "private": false,
  "scripts": {
    "commit": "cz",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,svelte}\"",
    "package-all:pre": "npm run package:pre --workspaces --if-present",
    "package-all": "npm run package-all:pre && npm run package --workspaces --if-present"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "workspaces": [
    "packages/*",
    "config/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@medyll/idae-eslint-config": "^1.0.0",
    "@medyll/idae-prettier-config": "^1.0.0",
    "@types/jest": "^29.5.12",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.9.0",
    "jest": "^29.7.0",
    "lerna": "^8.1.8",
    "node": "^22.6.0",
    "svelte": "5.0.0-next.218",
    "ts-jest": "^29.2.4",
    "tshy": "^3.0.2",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4"
  },
  "version": "0.0.2",
  "dependencies": {
    "@medyll/cssfabric": "file:../app-node/cssfabric",
    "@medyll/idae-engine": "^1.1.2",
    "@medyll/idae-socket": "^0.0.2",
    "@octokit/rest": "^21.0.1",
    "glob": "^11.0.0",
    "npm": "^10.8.2",
    "publint": "^0.2.9"
  },
  "peerDependencies": {
    "svelte": "^5.0.0-next"
  }
}
