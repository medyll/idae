{
  "name": "root",
  "scope": "@medyll",
  "private": false,
  "scripts": {
    "commit": "cz",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,svelte}\"",
    "package-all:pre": "npm run package:pre --workspaces --if-present",
    "package-all": "npm run package-all:pre && npm run prepack --workspaces --if-present && npm run package --workspaces --if-present",
    "package:verify": "node scripts/verify-packages.js",
    "postinstall": "npm run package:verify"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "workspaces": [
    "packages/*",
    "packages-config/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.2",
    "@medyll/idae-db": "^0.87.0",
    "@types/jest": "^29.5.14",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.5.0",
    "eslint": "^9.25.0",
    "jest": "^29.7.0",
    "lerna": "^8.2.2",
    "node": "^23.11.0",
    "ts-jest": "^29.3.2",
    "tshy": "^3.0.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  },
  "version": "0.0.2",
  "dependencies": {
    "@medyll/cssfabric": "file:../app-node/cssfabric",
    "@medyll/idae-engine": "next",
    "@octokit/rest": "^21.1.1",
    "glob": "^11.0.1",
    "npm": "^11.3.0",
    "publint": "^0.3.12"
  },
  "peerDependencies": {
    "@sveltejs/adapter-auto": "^4.0.0",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "svelte": "^5.0.0-next",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.40.0"
  }
}
