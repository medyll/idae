{
  "name": "@medyll/idae-html",
  "description": "Raw HTML utility library for dynamic web apps/sites (client & client-server), inspired by Svelte/React but builderless. Provides advanced HTML generation, parsing, and manipulation in JS/TS. Integrates with @medyll/idae-dom-events, idae-idbql, and @medyll/idae-stator (monorepo).",
  "bin": {
    "idae-html": "./cli.cjs"
  },
  "version": "1.0.2",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medyll/idae.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "npm run build:html:all && node scripts/copy-components.js && node scripts/transpile-html-scripts.js && npm run build:types && publint",
    "prepublishOnly": "npm run package",
    "check": "tsc -p ./tsconfig.json --noEmit",
    "check:watch": "tsc -p ./tsconfig.json --noEmit --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "prepackage": "node scripts/package-pre.js",
    "build:types": "tsc -p tsconfig.build.json",
    "build:dist": "node scripts/build-resizePanel.js",
    "build:html": "node scripts/build-html-component.js",
    "build:html:all": "node scripts/build-html-all.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "^4.0.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "."
  },
  "devDependencies": {
    "@medyll/idae-be": "workspace:*",
    "@medyll/idae-config-prettier": "latest",
    "@medyll/idae-eslint-config": "workspace:*",
    "@medyll/idae-shared": "workspace:*",
    "@semantic-release/github": "^12.0.5",
    "@sveltejs/adapter-auto": "^7.0.0",
    "@sveltejs/kit": "^2.50.2",
    "@sveltejs/package": "^2.5.7",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/eslint": "^9.6.1",
    "esbuild": "^0.18.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.14.0",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "publint": "^0.3.17",
    "svelte": "^5.50.0",
    "svelte-check": "^4.3.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1"
  },
  "keywords": [
    "idae",
    "html",
    "templating",
    "html-utils",
    "dom"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scope": "medyll",
  "author": "Lebrun Meddy",
  "dependencies": {
    "@medyll/idae-dom-events": "workspace:*",
    "@medyll/idae-idbql": "workspace:*",
    "@medyll/idae-query": "workspace:*",
    "@medyll/idae-stator": "workspace:*",
    "command": "^1.1.1",
    "commander": "^14.0.3"
  }
}
