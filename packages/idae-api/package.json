{
  "name": "@medyll/idae-api",
  "bin": {
    "idae-api": "./cli.js"
  },
  "scope": "medyll",
  "author": "Lebrun Meddy",
  "repository": {
    "type": "git",
    "url": "https://github.com/medyll/idae.git"
  },
  "version": "0.187.2",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "description": "A flexible and extensible API framework for Node.js, designed to work with multiple database types and configurations. It features a modular architecture, dynamic database connection management, and a flexible routing system. The framework supports TypeScript for improved robustness and maintainability.",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "package:watch": "svelte-kit sync && svelte-package --watch",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "prepackage": "node scripts/package-pre.js",
    "doc": "typedoc --entryPointStrategy expand src/lib/server/middleware src/lib/server/engine src/lib/client"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "tshy": {
    "dialects": [
      "esm"
    ]
  },
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.5",
    "mongoose-sequence": "^6.0.1",
    "pg": "^8.17.2",
    "pino": "^10.3.0",
    "qs": "^6.14.1",
    "sequelize": "^6.37.7"
  },
  "publishConfig": {
    "access": "public",
    "directory": "."
  },
  "devDependencies": {
    "@medyll/idae-config-prettier": "latest",
    "@medyll/idae-db": "workspace:*",
    "@medyll/idae-eslint-config": "workspace:*",
    "@medyll/idae-shared": "workspace:*",
    "@semantic-release/github": "^12.0.2",
    "@sveltejs/adapter-auto": "^7.0.0",
    "@sveltejs/kit": "^2.50.1",
    "@sveltejs/package": "^2.5.7",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/eslint": "^9.6.1",
    "@types/express-rate-limit": "^6.0.2",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.97",
    "@types/mongoose-sequence": "^3.0.11",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.14.0",
    "globals": "^17.2.0",
    "mongodb-memory-server": "^11.0.1",
    "mysql2": "^3.16.2",
    "node-mocks-http": "^1.17.2",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "supertest": "^7.2.2",
    "svelte": "^5.48.5",
    "svelte-check": "^4.3.5",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.16",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "zod": "^3.23.8"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module"
}
