{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"paths" : {
			"$lib": ["./src/lib"],
			"$sitedata": ["./src/sitedata"],
			"$lib/*": ["./src/lib/*"],
			"$sitedata/*": ["./src/sitedata/*"]
		}
	},
	"include": ["src/**/*"]
}
