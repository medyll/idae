{
  "name": "@medyll/idae-socket",
  "bin": {
    "idae-socket": "./cli.js"
  },
  "scope": "medyll",
  "author": "Lebrun Meddy",
  "version": "0.0.4",
  "description": "keep your app in sync with your backend!!",
  "main": "./src/lib/index.ts",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "dev": "tsc --build --verbose --incremental --watch & node.exe -r ts-node/register ./src --port 4000",
    "build": "tsc --build --verbose --incremental",
    "start": "node.exe lib --port 4000",
    "run": "nodemon ./src/lib/index.ts",
    "watch": "",
    "package": "svelte-kit sync && svelte-package && publint",
    "package:watch": "svelte-kit sync && svelte-package --watch",
    "prepackage": "node scripts/package-pre.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/medyll/idae.git"
  },
  "license": "ISC",
  "peerDependencies": {
    "svelte": "^5.0.0-next"
  },
  "dependencies": {
    "@socket.io/redis-adapter": "^8.3.0",
    "@types/express": "^5.0.6",
    "cors": "^2.8.6",
    "events": "^3.3.0",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "minimist": "^1.2.8",
    "nodemon": "^3.1.11",
    "npm-watch": "^0.13.0",
    "redis": "^5.10.0",
    "request": "^2.88.2",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "svelte-check": "^4.3.6"
  },
  "publishConfig": {
    "access": "public",
    "directory": "."
  },
  "devDependencies": {
    "@medyll/idae-config-prettier": "latest",
    "@medyll/idae-eslint-config": "workspace:*",
    "@medyll/idae-shared": "workspace:*",
    "@semantic-release/github": "^12.0.5",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.2.2",
    "@vitest/coverage-v8": "^4.0.18",
    "svelte": "^5.50.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
