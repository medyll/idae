{
  "name": "@medyll/idae-db",
  "bin": {
    "idae-db": "./cli.js"
  },
  "version": "0.155.2",
  "author": "Lebrun Meddy",
  "repository": {
    "type": "git",
    "url": "https://github.com/medyll/idae.git"
  },
  "description": "@medyll/idae-db is a flexible and powerful library for interacting with various databases, with a particular focus on MongoDB support. It offers robust connection management, an intuitive API, and simplified CRUD operations.",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:mongodb": "vitest run tests/mongodb.test.ts",
    "test:watch": "vitest --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "prepackage": "node scripts/package-pre.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "pg": ">=8.0.0",
    "pouchdb": ">=8.0.0",
    "sqlite3": ">=5.1.0",
    "svelte": "^5.0.0-next"
  },
  "publishConfig": {
    "access": "public",
    "directory": "."
  },
  "devDependencies": {
    "@medyll/idae-eslint-config": "workspace:*",
    "@medyll/idae-config-prettier": "latest",
    "@medyll/idae-query": "workspace:*",
    "@medyll/idae-shared": "workspace:*",
    "@semantic-release/github": "^12.0.5",
    "@sveltejs/adapter-auto": "^7.0.0",
    "@sveltejs/kit": "^2.50.2",
    "@sveltejs/package": "^2.5.7",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/eslint": "^9.6.1",
    "@types/pouchdb": "^6.4.2",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.14.0",
    "globals": "^17.3.0",
    "mongodb-memory-server": "^11.0.1",
    "pg": "^8.18.0",
    "pouchdb-adapter-memory": "^9.0.0",
    "pouchdb-find": "^9.0.0",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "publint": "^0.3.17",
    "sqlite3": "^5.1.7",
    "svelte": "^5.50.0",
    "svelte-check": "^4.3.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scope": "medyll",
  "dependencies": {
    "chromadb": "^3.2.2",
    "mongodb": "^7.1.0",
    "mysql2": "^3.16.3"
  }
}
