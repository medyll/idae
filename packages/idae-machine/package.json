{
	"name": "@medyll/idae-machine",
	"description": "SvelteKit based framework to build AI powered applications with ease.",
	"bin": {
		"idae-machine": "./cli.js"
	},
	"version": "0.135.2",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"prepackage": "node scripts/package-pre.js"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"author": "Lebrun Meddy",
	"repository": {
		"type": "git",
		"url": "https://github.com/medyll/idae.git"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"publishConfig": {
		"access": "public",
		"directory": "."
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.2",
		"@eslint/js": "^10.0.1",
		"@medyll/idae-eslint-config": "workspace:*",
		"@medyll/idae-config-prettier": "latest",
		"@medyll/idae-shared": "workspace:*",
		"@semantic-release/github": "^12.0.5",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.3.1",
		"eslint": "^10.0.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.3.0",
		"jsdom": "^28.0.0",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"publint": "^0.3.17",
		"svelte": "^5.50.0",
		"svelte-check": "^4.3.6",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.54.0",
		"vite": "^7.3.1",
		"vitest": "^4.0.18"
	},
	"scope": "medyll",
	"keywords": [
		"idae",
		"machine",
		"framework",
		"sveltekit",
		"ai",
		"application"
	],
	"dependencies": {
		"@huggingface/prettier-plugin-vertical-align": "^0.2.3",
		"@medyll/idae-idbql": "workspace:*",
		"@medyll/idae-slotui-svelte": "workspace:*"
	}
}
